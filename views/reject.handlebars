{{!-- Standard Nav Bar on logged in pages --}}
{{#if userID}}
<div class="topnav">
  <img class="logo" src="/img/logo.png">
  <a href="/{{this.userID}}/account">Account</a>
  <a href="/{{this.userID}}/shelf">Bookshelf</a>
  <a href="/{{this.userID}}/manage">Manage Swaps</a>
  <a href="/{{this.userID}}/browse">Browse</a>
  <a href="/">Logout</a>
</div>
{{/if}}

{{!-- Load book info and confirmation prompt --}}
{{#each swaps}}
<div id="rejectPrompt">
    <h2>Confirm Swap Rejection</h2>

    <p>Please confirm that you would like to reject this swap with {{this.reqName}}:
    <p>{{this.title}} by {{this.author}}</p>
    <p>{{comp this.condition}} condition for {{this.pointsTraded}} points</p>

    <button id="rejectSwap">REJECT SWAP</button>
    <a href="/{{this.userID}}/swaps">CANCEL</a>

    <div id="hiddenValues">
        <span id="swap">{{this.id}}</span>
        <span id="sender">{{this.senderID}}</span>
        <span id="receiver">{{this.receiverID}}</span>
        <span id="book">{{this.bookID}}</span>
        <span id="points">{{this.pointsTraded}}</span>
    </div>
</div>
{{/each}}

{{!-- Message for when API successfully finishes --}}
<div id="rejectSuccess">
    <h2>Swap Rejected!  This swap will no longer show as pending in your pending swaps list.</h2>
</div>

{{!-- Message for when API encounters error --}}
<div id="rejectError">
    <h2>Oops!  Something went wrong.  Try again.</h2>
</div>

